  <script>
    $(document).ready(function () {
      var schemes = $('#schemes')
      schemes.empty()

      $("#department_select").empty()
      $("#schemes_select").empty()

      $.get('/getschemes', (response) => {
        const key1 = 'department';
        const data1 = [...new Map(response.map(item => [item[key1], item])).values()];
        for (let i = 0; i < data1.length; i++) {
          $("#department_select").append(`<option value="${data1[i].department}">${data1[i].department}</option>`)
        }

        const key2 = 'scheme';
        const data2 = [...new Map(response.map(item => [item[key2], item])).values()];
        for (let i = 0; i < data2.length; i++) {
          $("#schemes_select").append(`<option value="${data2[i].scheme}">${data2[i].scheme}</option>`)
        }

        //by department
        $('#bydepartment').on('click', function () {
          window.location.href = '/search?department=' + $('#department_select').find(":selected").val().toLowerCase();
        })
        //by scheme
        $('#byscheme').on('click', function () {
          window.location.href = '/search?scheme=' + $('#schemes_select').find(":selected").val().toLowerCase();
        })

        for (let i = 0; i < response.length; i++) {
          schemes.append(`<div class="col-xl-3 col-md-6">
              <div class="card card-stats">
                <a href="/search?department=${response[i].department.toLowerCase()}" class="card-body">
                  <div class="row">
                    <div class="col text-center">
                      <div class="icon icon-shape bg-gradient-primary text-white rounded-circle shadow">
                        <img src="/files/${response[i].logo}" alt="">
                      </div>

                      <h5 class="card-title text-uppercase text-muted mb-0">${response[i].category}</h5>
                      <span class="h2 font-weight-bold mb-0" id="tbxs">${response[i].department}</span>
                    </div>
                  </div>
                </a>
              </div>
            </div>`)

          //button clicks
          $('#required_btn' + i).on('click', function () {
            $('#modal_head').text('Required Documents')
            $('.mb-items').hide()
            $('#required_docs').show()
          })

          $('#benefits_btn' + i).on('click', function () {
            $('#modal_head').text('Scheme Benefits')
            $('.mb-items').hide()
            $('#benefits_form').show()
          })

          $('#apply_btn' + i).on('click', function () {
            $('#modal_head').text('Apply for Scheme')
            $('.mb-items').hide()
            $('#apply_form').show()
          })
        }
      })
    })
  </script>

