    <script>
        $(document).ready(function () {
            $.get('/getapplications', (response) => {
                console.log(response)
                var applications = $('#applications');
                applications.empty()

                for (let i = 0; i < response.length; i++) {
                    applications.append(`<tr class="border-top">
                                        <th>${response[i].slno}</th>
                                        <td>${moment.unix(parseInt(response[i].creation)).format('DD/MM/YYYY hh:mm A')}</td>
                                        <td>${response[i].name}</td>
                                        <td>${response[i].mobile}</td>
                                        <td>${response[i].aadhar}</td>
                                        <td>${response[i].address}</td>
                                        <td><a href="${response[i].file1}" download>${response[i].file1}</a></td>
                                        <td><a href="${response[i].file2}" download>${response[i].file2}</a></td>
                                        <td><a href="${response[i].file3}" download>${response[i].file3}</a></td>
                                        <td><a href="${response[i].file4}" download>${response[i].file4}</a></td>
                                        <td>${response[i].department}</td>
                                        <td>${response[i].scheme}</td>
                                        <td>${response[i].trackingid}</td>
                                        <td>
                                            <select id="status_select${i}" class="btn btn-sm border border-light">
                                                <option value="Active" selected>Active</option>
                                                <option value="Pending">Pending</option>
                                                <option value="On Hold">On Hold</option>
                                                <option value="Rejected">Rejected</option>
                                            </select>

                                            <button id="del${i}" class="btn btn-sm bg-danger text-white">Remove</button>
                                        </td>
                                    </tr>`)

                    $('#status_select' + i).val(response[i].status).change();

                    //Change status
                    $('#status_select' + i).on('change', function () {
                        if (confirm('Are you sure you want to change application status?')) {
                            $.get('/changeapplicationstatus', { slno: response[i].slno, status: this.value }, (response) => {
                                alert(response)
                            })
                        } else {
                            alert('Status not changed!')
                        }
                    });

                    //Delete entry
                    $('#del' + i).on('change', function () {
                        if (confirm('Are you sure you want to remove this application?')) {
                            $.get('/removeapplication', { slno: response[i].slno }, (response) => {
                                alert(response)
                            })
                        }
                    });
                }
            })
        })
